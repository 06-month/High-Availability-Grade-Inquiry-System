# NCP (Naver Cloud Platform) Environment Variables
# Copy this file to .env.ncp and fill in your actual values

# MySQL Database Settings
NCP_MYSQL_HOST=your-ncp-mysql-host.ncloud.com
NCP_MYSQL_PORT=3306
NCP_MYSQL_DATABASE=grade_portal
NCP_MYSQL_USERNAME=grade_user
NCP_MYSQL_PASSWORD=your-secure-password
NCP_MYSQL_REPLICA_HOST=your-ncp-mysql-replica-host.ncloud.com
MYSQL_ROOT_PASSWORD=your-root-password

# Redis Settings
NCP_REDIS_HOST=your-ncp-redis-host.ncloud.com
NCP_REDIS_PORT=6379
NCP_REDIS_PASSWORD=your-redis-password

# JWT Settings
JWT_ISSUER_URI=https://your-auth-server.com/auth/realms/grade-portal

# Application Settings
SPRING_PROFILES_ACTIVE=ncp